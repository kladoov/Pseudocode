Algoritmo numPositivoNegativo
	//6. Diseñar un algoritmo que indique si el número introducido es positivo o negativo.
	Definir num Como Entero;
	Leer num;
	Si num > 0 Entonces
		Escribir "El numero es positivo";
		Sino Si num < 0 Entonces
				Escribir  "El numero es negativo";
			Sino Si num == 0 Entonces
					Escribir  "El numero es neutro";
				FinSi
		FinSi
	FinSi
FinAlgoritmo
